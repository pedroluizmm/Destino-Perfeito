<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagem na parte superior -->
    <ImageView
        android:id="@+id/imageViewPontoTuristico"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/logo_placeholder"/>

    <!-- Nome do Ponto -->
    <TextView
        android:id="@+id/textViewNomeDetalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nome do Ponto"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imageViewPontoTuristico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Informação 1 -->
    <TextView
        android:id="@+id/textViewInfo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Informação 1"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewNomeDetalhe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Informação 2 -->
    <TextView
        android:id="@+id/textViewInfo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Informação 2"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewInfo1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Informação 3 -->
    <TextView
        android:id="@+id/textViewInfo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Informação 3"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewInfo2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão para GPS -->
    <Button
        android:id="@+id/buttonOpenGPS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Abrir no GPS"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewInfo3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonFavoritar" />

    <!-- Botão de Favoritar -->
    <Button
        android:id="@+id/buttonFavoritar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Adicionar aos Favoritos"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/buttonOpenGPS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
